# Atumwa Authentication Configuration

# Enable development mode (allows test email logins without real password validation)
# In dev mode, test emails (client@atumwa.com, runner@atumwa.com, admin@atumwa.com, pending@atumwa.com) 
# can be logged in with password "any"
# IMPORTANT: Keep this false in production
REACT_APP_DEV_MODE=true

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_KEY=dev_key_change_in_production

# Email Configuration (for production)
REACT_APP_SMTP_SERVER=
REACT_APP_SMTP_PORT=
REACT_APP_SMTP_USER=
REACT_APP_SMTP_PASSWORD=
REACT_APP_FROM_EMAIL=noreply@atumwa.com

# Payment Configuration (for production)
REACT_APP_STRIPE_PUBLIC_KEY=
REACT_APP_PAYPAL_CLIENT_ID=

# Map Configuration
REACT_APP_MAP_API_KEY=

# Feature Flags
REACT_APP_ENABLE_2FA=false
REACT_APP_ENABLE_SURGE_PRICING=false
REACT_APP_ENABLE_REFERRAL_PROGRAM=false
